# OpenAI API Key for language model interactions
OPENAI_API_KEY="your_openai_api_key"

# Email credentials for sending notifications
SENDER_EMAIL="your_email@gmail.com"
SENDER_PASSWORD="your_email_password"

# Model and token settings
MAX_TOKENS=8192
MODEL_DIARIZATION="pyannote/speaker-diarization@2.1"

# Database and output paths
DB_PATH="/path/to/your/database"
OUTPUT_PATH="/path/to/output/directory"

# Hugging Face API Key for NLP tasks
HUGGINGFACE_API_KEY="your_huggingface_api_key"

# Path to transcription file
PATH_TRANSCRIPTION="/path/to/transcription.txt"

# Trello API credentials (if used for task management)
TRELLO_API_KEY="your_trello_api_key"
TRELLO_API_SECRET="your_trello_api_secret"
TRELLO_API_TOKEN="your_trello_api_token"
TRELLO_BOARD_ID="your_trello_board_id"
AAA=""

# AWS S3 storage for recordings
BUCKET_NAME="your_s3_bucket_name"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Streaming URL for live broadcasts
STREAM_URL="rtmp://your_stream_url"

# Chunking and silence detection settings
CHUNK_INTERVAL=15  # Time (in seconds) for splitting audio chunks
SILENCE_TIMEOUT=30 # Time (in seconds) to consider silence as a break


